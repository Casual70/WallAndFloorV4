<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_selected="true">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="20dp"/>
            <stroke
                android:width="@dimen/colopallet_element_stoke"
                android:color="@color/red_error"/>
        </shape>
    </item>
    <item
        android:state_selected="false">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="20dp"/>
            <stroke
                android:width="@dimen/colopallet_element_stoke"
                android:color="@color/gray600"/>
        </shape>
    </item>

</selector>