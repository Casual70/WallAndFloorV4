<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Project"
        android:id="@+id/ProjectName_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ProjectName_edit"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/ProjectName_label"
        android:layout_alignParentStart="true"
        android:inputType="text"
        android:layout_alignEnd="@+id/FilePath_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Zone"
        android:id="@+id/ZoneName_label"
        android:layout_below="@+id/ProjectName_edit"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ZoneName_edit"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/ZoneName_label"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/FilePath_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Percorso File"
        android:id="@+id/FilePath_label"
        android:layout_below="@+id/ZoneName_edit"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/FilePath_edit"
        android:layout_below="@+id/FilePath_label"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FilePath_edit"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conferma"
            android:id="@+id/button_confim"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annulla"
            android:id="@+id/button_avoid"
            android:layout_weight="1"/>
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_dialog"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ProjectName_edit"
        android:layout_alignBottom="@+id/ZoneName_edit" />

</RelativeLayout>