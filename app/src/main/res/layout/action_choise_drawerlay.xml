<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:id="@+id/linearLay_drawOpt"
    android:layout_gravity="end"
    android:orientation="vertical">
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_undoPath"
        android:text="Stroke float"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filling Type"
        android:id="@+id/button_redoPath"
        android:layout_below="@+id/button_undoPath"
        android:layout_alignEnd="@+id/button_undoPath"
        android:layout_alignStart="@+id/button_undoPath" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Only Border"
        android:id="@+id/button_onlyBord"
        android:layout_below="@+id/button_redoPath"
        android:layout_alignStart="@+id/button_redoPath" />

</RelativeLayout>